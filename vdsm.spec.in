%endif

%ifarch x86_64
Requires: %{python_or_python3}-dmidecode
Requires: dmidecode
Requires: virt-v2v
%endif

Requires: chrony
Requires: which
Requires: sudo >= 1.7.3
Requires: logrotate
Requires: lshw
Requires: xz
Requires: %{python_or_python3}-netaddr
%if %{target_py} == py2
Requires: python-pthreading >= 0.1.3-3
Requires: rpm-python
%else
Requires: python3-rpm
%endif
Requires: %{python_or_python3}-six >= 1.9.0
Requires: %{python_or_python3}-requests
Requires: abrt-cli
Requires: abrt-addon-vmcore
Requires: abrt-addon-ccpp
%if %{target_py} == py3
