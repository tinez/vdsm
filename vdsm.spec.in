# Packages names
%global vdsm_name vdsm

# Required users and groups
%global vdsm_user vdsm
%global vdsm_group kvm
%{!?qemu_user: %global qemu_user qemu}
%{!?qemu_group: %global qemu_group qemu}
%global snlk_group sanlock
%global snlk_user sanlock
%global cdrom_group cdrom

# Features
%{!?with_ovirt_imageio: %global with_ovirt_imageio 1}
%{!?with_ovirt_vmconsole: %global with_ovirt_vmconsole 1}
%{!?with_gluster_mgmt: %global with_gluster_mgmt 1}
%{!?with_hooks: %global with_hooks 0}
%{!?with_vhostmd: %global with_vhostmd 0}
%{!?with_4k_support: %global with_4k_support 0}

%ifarch ppc64le
%global with_openvswitch_default 0
%else
%global with_openvswitch_default 1
%endif
%{!?with_openvswitch: %global with_openvswitch %{with_openvswitch_default}}

%{!?vdsm_repo: %global vdsm_repo /rhev/data-center}

%if 0%{?centos} || 0%{?fedora}
%global gluster_version 3.12
%else #rhel
%global gluster_version 3.8
%endif

# Default to skipping autoreconf.  Distros can change just this one line
# (or provide a command-line override) if they backport any patches that
# touch configure.ac or Makefile.am.
%{!?enable_autotools:%global enable_autotools 0}

# Required paths
%if 0%{?fedora}
%global _polkitdir %{_datadir}/polkit-1/rules.d
%else
%global _polkitdir %{_localstatedir}/lib/polkit-1/localauthority/10-vendor.d
%endif
%global _vdsm_log_dir %{_localstatedir}/log/%{vdsm_name}

# Disable debuginfo package, since vdsm is a meta-package
%global debug_package %{nil}

%{!?target_py: %global target_py py2}

%if %{target_py} == py2
%global python2_or_python3 python2
%global python_or_python3 python
%global python_pyyaml PyYAML
%else
%global python2_or_python3 python3
%global python_or_python3 python3
%global python_pyyaml python3-pyyaml
%endif

%if %{target_py} == py3
# RPM packaging guidelines require all files outside of '/usr/lib[64]/pythonX.X'
# to be compiled manually [1]. Some distros try to find '*.py' files outside of the aforementioned
# dirs and compile them for us, but using hard-coded '__python' macro, which points to Python 2.
# We opt-out of this behavior and do the compilation ourselves in 'install' stage.
#
# [1] https://docs.fedoraproject.org/en-US/packaging-guidelines/Python_Appendix/#manual-bytecompilation
%global _python_bytecompile_extra 0

%global python_sitelib %{python3_sitelib}
%endif

%if %{target_py} == py2
%global python_libvirt libvirt-python
%else
%global python_libvirt python3-libvirt
%endif

# Version and release must be generated dynamically and that can't be done here.
# They must be either:
# - filled in by configure
# - generated using ./build-aux/make-dist script
# - passed to rpmbuild as
#   --define="version $(./build-aux/pkg-version --version)"
#   --define="release $(./build-aux/pkg-version --release)"
%{!?vdsm_version: %global vdsm_version @PACKAGE_VERSION@}
%{!?vdsm_release: %global vdsm_release @PACKAGE_RELEASE@}

Name:           %{vdsm_name}
Version:        %{vdsm_version}
Release:        %{vdsm_release}%{?dist}%{?extra_release}
Summary:        Virtual Desktop Server Manager

Group:          Applications/System
License:        GPLv2+
Url:            http://www.ovirt.org/develop/developer-guide/vdsm/vdsm/
Source0:        %{vdsm_name}-%{version}.tar.gz

%{!?_licensedir:%global license %%doc}

BuildRequires: openssl
BuildRequires: %{python_or_python3}
BuildRequires: %{python_or_python3}-six >= 1.9.0
BuildRequires: %{python_or_python3}-dateutil
%if %{target_py} == py2
BuildRequires: python-subprocess32
%endif
BuildRequires: %{python2_or_python3}-devel
BuildRequires: rpm-build
BuildRequires: systemd-units

# Autotools BuildRequires
%if 0%{?enable_autotools}
