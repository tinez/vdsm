Requires: %{name}-http = %{version}-%{release}
Requires: %{name}-jsonrpc = %{version}-%{release}
%if 0%{?rhel} >= 8
Requires: safelease >= 1.0.1-1.el8ev
%else
Requires: safelease >= 1.0-7
%endif
Requires: mom >= 0.5.14
Requires: util-linux
Requires(pre): shadow-utils

Obsoletes: %{name}-infra < 4.19

%if 0%{?rhel}
